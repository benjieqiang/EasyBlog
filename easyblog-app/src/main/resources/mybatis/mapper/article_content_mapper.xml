<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ben.infrastructure.persistent.dao.IArticleContentDao">

    <resultMap id="articleContentMap" type="com.ben.infrastructure.persistent.po.ArticleContent">
        <id column="id" property="id"/>
        <result column="article_id" property="articleId"/>
        <result column="content" property="content"/>
    </resultMap>

    <insert id="insert" parameterType="com.ben.infrastructure.persistent.po.ArticleContent">
        insert into article_content
            (article_id, content)
        values (#{articleId}, #{content})
    </insert>

    <update id="updateByArticleId" parameterType="com.ben.infrastructure.persistent.po.ArticleContent">
        update article_content
        set content = #{content}
        where article_id = #{articleId}
    </update>

    <delete id="deleteByArticleId" parameterType="Long">
        delete
        from article_content
        where article_id = #{articleId}
    </delete>

    <select id="selectByArticleId" resultMap="articleContentMap">
        select id, article_id, content
        from article_content
        where article_id = #{articleId}
    </select>

</mapper>
